<div class="container">
  <div class="row">

    <div class="mx-auto">
      <div class="sign_up_wrapper">

        <div class="text-center">
          <h2>新規登録画面</h2>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

            <div class="field">
              <%= f.label :last_name, class: "text-right" %>
              <%= f.text_field :last_name, required: true, autofocus: true, input_html: { autocomplete: "last_name" } %>
              <%= f.text_field :first_name, required: true, autofocus: true, input_html: { autocomplete: "first_name" } %>
            </div>

            <div class="field">
              <%= f.label :last_name_kana, class: "text-right" %>
              <%= f.text_field :last_name_kana, required: true, autofocus: true, input_html: { autocomplete: "last_name_kana" } %>
              <%= f.text_field :first_name_kana, required: true, autofocus: true, input_html: { autocomplete: "first_name_kana" } %>
            </div>

            <!-- ここからAdressモデルへ送るフォーム -->
            <%= f.fields_for :address do |a| %>
              <div class="field">
                <%= a.label :post_num%>
                <%= a.text_field :post_num %>
              </div>
            <% end %>
            <!-- ここまでAdressモデルへ送るフォーム -->

            <div class="field">
              <%= f.label :phone_num, class: "text-right" %>
             <%= f.text_field :phone_num, required: true, autofocus: true, input_html: { autocomplete: "phone_num" } %>
            </div>

            <div class="field">
              <%= f.label :email, class: "text-right" %>
              <%= f.email_field :email, required: true, autofocus: true, input_html: { autocomplete: "email" } %>
            </div>

            <div class="field">
              <%= f.label :password, class: "text-right" %>
              <%= f.password_field :password, required: true, input_html: { autocomplete: "new-password" } %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, class: "text-right" %>
              <%= f.password_field :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, "sign_up" %>
            </div>

        <% end %>

      </div>
    </div>
  </div>
</div>