<div class="main">
	<div class="userinfo_wrapper">
		<h1 class="text-center">ユーザー情報</h1>
		<table>
			<tr>
				<th>名前：</th>
				<td><%= @user.last_name %><%= @user.first_name %></td>
			</tr>
			<tr>
				<th>名前（かな）：</th>
				<td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
			<tr>
				<th>郵便番号：</th>
				<td><%= @address.post_num %></td>
			<tr>
				<th>住所：</th>
				<td><%= @address.address %></td>
			<tr>
				<th>E-mail：</th>
				<td><%= @user.email %></td>
			<tr>
				<th>電話番号：</th>
				<td><%= @user.phone_num %></td>

		</table>

		<div class="mypage_btn_wrapper">
			<%= link_to "登録情報を編集", edit_user_path, class: "btn btn-info" %>




			<%= link_to("/favorites", class: 'btn btn-info') do %>

				<i class="far fa-heart"></i>
				<span>お気に入りリスト</span>
			<% end %>

			<!-- ユーザーフラグで退会ボタンor削除ボタンか変える -->
			<% if current_user.user_flag == 0 %>
			<%= link_to "退会", "/delete_confirmation", class: "btn btn-info" %>
			<% else %>
				<%= link_to "会員削除", @user,  method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-info" %>
			<% end %>
		</div>
	</div>

	<!-- 管理人マイページのみ売り上げ表示 -->
	<div class="shop_sales">
	<% if @user.user_flag == 1 %>
		<tr>
			<th>売り上げ状況：</th>
			<td>¥   <%= @sales %></td>
		</tr>
	<% end %>
	</div>

	<hr color="#777" width="95%" size="5">

	<!-- ここから購入履歴 -->
	<div class="order_history">
		<h3>購入経歴</h3>

			<!-- ここからモデルに保存されてるファイル -->
			<% @orders.zip(@carts).each do |order, cart| %>
				<div class="order_history_title">
					<% if order.delivery_status == "Shipped" %>
						<span class="btn btn-success btn-sm"><%= order.delivery_status_i18n %></span>
					<% elsif order.delivery_status == "Unshipp" %>
						<span class="btn btn-primary btn-sm"><%= order.delivery_status_i18n %></span>
					<% else %>
						<span class="btn btn-warning btn-sm"><%= order.delivery_status_i18n %></span>
					<% end %>
					<span class="order_history_title_purchase"><%= order.created_at.strftime('%Y年%m月%d日') %>に購入</span>
				</div>
				<table>
					<% order.order_items.each do |order_item| %>
						<tr>
							<td rowspan="2" class="order_history_image">
								<%= attachment_image_tag cart.product, :image, :fill, 100, 100, format: 'png', fallback: "no_image.png", :size =>'100x100' %>
							</td>
							<td>商品名：　<%= cart.product.product_name %></td>
							<td>シングル/アルバム：　<%= cart.product.disc_type_i18n %></td>
							<td>アーティスト名：　<%= cart.product.artist %></td>
						</tr>
						<tr>
							<td>購入枚数：　<%= cart.buy_count %>枚</td>
								<td>小計：　￥<%= order_item.buy_price %></td>
								<td></td>
							</tr>
							<tr><td colspan="4" class="order_history_border"></td></tr>
			  			<% end %>
					<tr>
						<td colspan="4">合計金額：￥<%= order.total_price %></td>
					</tr>
					<tr><td colspan="4" class="order_history_border"></td></tr>
					<tr>
						<td colspan="4">配送先：　<%= order.address.address %></td>
					</tr>
					<tr><td colspan="4" class="order_history_border"></td></tr>
				</table>
			<% end %>

	</div>
</div>

<%= paginate @orders, class: "paginate" %>