<!DOCTYPE html>
<html>
<head>

  <title>CdMania</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
  <link rel="stylesheet" href="style.css">
</head>

<body>


  <header>

    <!-- boot strap nav bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>



      <% if user_signed_in? %>

      <!-- 管理者なら -->

      <% if current_user.user_flag == 1 %>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
        <div class="title-admin">
          <%= link_to"CDまにあ堂", "/" %>
        </div>

        <span class="nav-item-admin">
          <%= link_to"新規投稿", "/products/new" %>
        </span>

        <span class="nav-item-admin">
          <%= link_to users_path do %>
          <i class="fas fa-user"></i><br>
          マイページ
          <% end %>
        </span>

        <span class="nav-item-admin">
          <%= link_to "/users" do %>
          <i class="fas fa-users"></i><br>
          ユーザー一覧
          <% end %>
        </span>

        <span class="nav-item-admin">
          <%= link_to "/order_items" do %>
          <i class="fas fa-compact-disc"></i><br>
          販売一覧
          <% end %>
        </span>

        <span class="nav-item-admin">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </span>

      </div>

      <!-- 一般ユーザー -->

      <% elsif current_user.user_flag == 0 %>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo03">

        <div class="title-kaiin">
          <%= link_to"CDまにあ堂", "/" %>
        </div>
        <span class="form">
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="アーティスト名検索" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
          </form>
        </span>

        <span class="nav-item">
          <%= link_to users_path do %>
          <i class="fas fa-user"></i><br>
          マイページ
          <% end %>
        </span>

        <span class="nav-item">
          <%= link_to orders_path do %>
          <i class="fas fa-cart-arrow-down"></i><br>
          カート
          <% end %>
        </span>

        <span>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </span>

      </div>

      <% end %>




      <!-- 上記当てはまらない人（サインインしていない人） -->
      <% else %>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo03">

        <div class="title-user">
          <%= link_to"CDまにあ堂", "/" %>
        </div>
        <span class="form">
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="アーティスト名検索" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
          </form>
        </span>

        <span class="nav-item">
          <%= link_to"ログイン", "/users/sign_in" %>
        </span>

        <span>
          <%= link_to"新規登録", "/users/sign_up" %>
        </span>
      </div>

      <% end %>


    </nav>


    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>">
        <%= message %>
      </div>
    <% end %>

  </header>

  <%= yield %>

</body>

</html>
