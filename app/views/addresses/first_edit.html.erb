<div class="main">

  <div class="container">
    <div class="row">

      <div class="mx-auto">
        <div class="sign_up_wrapper">

          <div class="text-center py-4">
            <h2>ユーザー情報の編集</h2>
          </div>

          <%= form_for(@address, url:first_edit_path) do |f| %>
                <div class="field py-2">
                  <span>郵便番号</span><br>
                  <%= f.number_field :post_num, required: true, value:"#{ @address.post_num }" %>
                </div>
                <div class="field py-2">
                  <span>住所</span><br>
                  <%= f.text_field :address, required: true, value:"#{ @address.address }", class: "long" %>
                </div>
                <div class="field py-2">
                  <%= f.submit "送信" %>
                </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

</div>