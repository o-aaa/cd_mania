<h1>Products#show</h1>

<body>

  <div class="container">
	<div class="row">

       <!--商品情報側-->

		<div class="col-lg-9">
			<div class="row">

				<div class="col-lg-6">
					<span class="badge badge-pill badge-primary"><%= @product.genre %></span>
					<span class="badge badge-pill badge-info"><%= @product.lebel %></span>
					<br>
					<img src="http://placehold.it/350x350">
					 <%= attachment_image_tag @product, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", :size =>'100x100' %>
				</div>

				<div class="col-lg-6">
					<table class="table">
						<tbody>

								<tr><th><h2><%= @product.product_name %></h2></th></tr>
								<tr><th>発売日 : <%= @product.release_date %></th></tr>
								<tr><th>アーティスト : <%= @product.artist %></th></tr>
								<tr><th><h3>価格 : ¥<%= (@product.price*1.08).floor %>(税込)</h3></th></tr>

						</tbody>
					</table>
				</div>

			</div>
		</div>

		<!--カート＆管理者編集側-->

		<div class="col-lg-3">
			<div class="border-left" style="padding:15px;">
				<button type="button" class="btn btn-outline-secondary"><i class="fas fa-cart-arrow-down fa-5x "></i></button>
				<h5>カートに入れる</h5>
				<br>
				<div class="form-group">
                   <label for="exampleSelect1exampleFormControlSelect1">枚数</label>
                   <select class="form-control" id="buy_count">
                     <option value="1">1</option>
                     <option value="2">2</option>
                     <option value="3">3</option>
                     <option value="4">4</option>
                     <option value="5">5</option>
                   </select>
                </div>

                <div>
                 <!--% if current_user.user_flag == 2 %-->
                   <%= link_to "編集", edit_product_path, class: "btn btn-success" %>
                   <%= link_to "削除", product_path(@product.id), class: "btn btn-danger", method: :delete %>
                 <!--% end %-->
                </div>
            </div>
		</div>


	 </div>
    </div>

</body>