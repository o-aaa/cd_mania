<h1>Products#index</h1>

<body>

     <div class="container">
      <div class="col-xs-12">
        <h2 class="product_index">商品一覧</h2>
      </div>
     </div>
      <br>

    <div class="container">
      <div class="row">

	   <% @products.each do |product| %>
	     <div class="col-xs-6 col-lg-4 text-center mb-4">

		  <div class="card p-4" style="width: 20rem;">

            <%= attachment_image_tag product, :image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", :size =>'250x250' %>
            
          

             <div class="card-body">
                <h2 class="card-title"><%= link_to product.disc_name, product_path(product.id) %></h2>
                <h4 class="card-text"><%= product.artist %></h4> 
                <h4 class="card-text">¥<%= product.price %>円</h4> 

             </div>

          </div>

         </div>
       <% end %>

      </div>
    </div>

    <%= paginate @products, class: "paginate" %>
</body>
